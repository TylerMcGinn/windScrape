<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Xamarin_WeatherApp"
             xmlns:views="clr-namespace:Xamarin_WeatherApp.Views"
            BarBackgroundColor="Coral"
             x:Class="Xamarin_WeatherApp.MainPage">
    <TabbedPage.Children>
        <NavigationPage Title="Hourly">
            <x:Arguments>
                <views:listView/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Chart">
            <x:Arguments>
                <views:chartView/>
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
       

</TabbedPage>
